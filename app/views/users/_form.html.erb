<%= render 'shared/errors', obj: @user %>

<div class="row">
  <div class="col-md-12">
    <%= form_for @user do |f| %>

      <div class="form-group row">
        <div class=" col-form-label col-sm-2">
          <%= f.label :username, class: "float-right" %>
        </div>
        <div class="col-sm-8">
        	<%= f.text_field :username, class: "form-control", placeholder: "Enter username", autofocus: true %>
        </div>      
      </div>

      <div class="form-group row">
        <div class=" col-form-label col-sm-2">
        	<%= f.label :email, class: "float-right" %>
        </div>
        <div class="col-sm-8">
        	<%= f.email_field :email, class: "form-control", placeholder: "example@example.com" %>
        </div>
      </div>

      <div class="form-group row">
        <div class=" col-form-label col-sm-2">
          <%= f.label :password, class: "float-right" %>
        </div>
        <div class="col-sm-8">
          <%= f.password_field :password, class: "form-control", placeholder: "Enter password" %>
        </div>
      </div>

      <div class="form-group row">
        <div class="offset-sm-2 col-sm-8">
       	  <%= f.submit( @user.new_record? ? "Sign up" : "Update" , class: "btn btn-primary") %>
        </div>
      </div>
    <% end %>

    <%= link_to "Back", articles_path %>

  </div>
</div>
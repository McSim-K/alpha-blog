<% if @article.errors.any? %>
  <h2> The following errors prevented an article from creating </h2>
  <ul>
	<% @article.errors.full_messages.each do |msg| %>
	  <li><%= msg %></li>
	<% end %>
  </ul>
<% end %>


<div class="row">
  <div class="col-md-12">
    <%= form_for @article do |f| %>

      <div class="form-group row">
        <div class=" col-form-label col-sm-2">
          <%= f.label :title, class: "float-right" %>
        </div>
        <div class="col-sm-6">
        	<%= f.text_field :title, class: "form-control", placeholder: "Article Title", autofocus: true %>
        </div>      
      </div>

      <div class="form-group row">
        <div class=" col-form-label col-sm-2">
        	<%= f.label :description, class: "float-right" %>
        </div>
        <div class="col-sm-6">
        	<%= f.text_area :description, rows: 8, class: "form-control", placeholder: "Article Description" %>
        </div>
      </div>

      <div class="form-group row">
        <div class="offset-sm-2 col-sm-6">
       	  <%= f.submit class: "btn btn-primary" %>
        </div>
      </div>
    <% end %>

    <%= link_to "Back", articles_path %>

  </div>
</div>
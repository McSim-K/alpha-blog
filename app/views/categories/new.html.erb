<h1 align="center">Create a category</h1>

<%= render 'shared/errors', obj: @category %>

<div class="row">
  <div class="col-md-12">
    <%= form_for @category do |f| %>

      <div class="form-group row">
        <div class=" col-form-label col-sm-2">
          <%= f.label :name, class: "float-right" %>
        </div>
        <div class="col-sm-8">
        	<%= f.text_field :name, class: "form-control", placeholder: "Category title", autofocus: true %>
        </div>      
      </div>

      <div class="form-group row">
        <div class="offset-sm-2 col-sm-8">
       	  <%= f.submit "Create", class: "btn btn-primary" %>
        </div>
      </div>
    <% end %>

  </div>
</div>